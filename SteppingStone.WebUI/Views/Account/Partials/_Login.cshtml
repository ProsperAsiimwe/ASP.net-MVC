@model SteppingStone.WebUI.Models.Account.LoginViewModel

<div class="login-text">Enter your login details:</div>
<div class="form-dark-bg">
    @using (Html.BeginForm("Login", "Account")) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Bootstrap().TextBoxFor(m => m.Email).Placeholder().ShowValidationMessage(true)
        </div>
        <div class="form-group">
            @Html.Bootstrap().PasswordFor(m => m.Password).Placeholder().HtmlAttributes(new { autocomplete = "off" }).ShowValidationMessage(true)
        </div>
        @Html.Bootstrap().SubmitButton().Style(ButtonStyle.Default).ButtonBlock().Text("Sign in")
    }
    <div class="form-footer">
        @Html.Bootstrap().ActionLink("Forgot your password?", "ForgotPassword").AppendIcon("glyphicon glyphicon-help")
    </div>
</div>