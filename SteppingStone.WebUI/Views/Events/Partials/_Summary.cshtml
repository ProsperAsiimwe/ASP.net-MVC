@model SteppingStone.Domain.Entities.Event

<aside class="panel-summary">
    <h3>Event details</h3>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Model.Name</dd>
        <dt>@Html.DisplayNameFor(m => m.Description)</dt>
        <dd>@Model.Description</dd>
        <dt>@Html.DisplayNameFor(m => m.EventDate)</dt>
        <dd>@InputHelper.ParseDate(Model.EventDate, "ddd, dd MMM yyyy")</dd>
        <dt>@Html.DisplayNameFor(m => m.NotificationDate)</dt>
        <dd>@InputHelper.ParseDate(Model.NotificationDate, "ddd, dd MMM yyyy")</dd>
        <dt>@Html.DisplayNameFor(m => m.IsGeneral)</dt>
        <dd>@InputHelper.ParseBool(Model.IsGeneral)</dd>               
        <dt>Number of Parents To Be Notified</dt>
        <dd>@string.Format("{0} Parents", Model.NoOfParents())</dd>
        @if (Model.Notified.HasValue)
        {
            <dt>@Html.DisplayNameFor(m => m.Notified)</dt>
            <dd>@InputHelper.ParseDate(Model.NotificationDate, "ddd, dd MMM yyyy")</dd>
        }
        <dt>@Html.DisplayNameFor(m => m.Added)</dt>
        <dd>@InputHelper.ParseDate(Model.Added, "ddd, dd MMM yyyy")</dd>
        <dt>Status</dt>
        <dd><span class="status-block bg-@Model.GetStatusCssClass()">@Model.GetStatus()</span></dd>
        
    </dl>
</aside>