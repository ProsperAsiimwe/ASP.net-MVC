@model SteppingStone.Domain.Entities.Event
@{
    ViewBag.Title = "Delete Event";
}

<section class="page-header">
    <div class="container">
        <h1>@ViewBag.Title</h1>
        <p class="lead">Are you sure you want to do this?</p>
    </div>
</section>

<section class="section-light">
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <div class="panel-danger panel">
                    <div class="panel-heading">
                        Terminate Event
                    </div>
                    <div class="panel-item-group">
                        <div class="panel-item clearfix">
                            <div class="col-sm-4 panel-item-label">Event's Name</div>
                            <div class="col-sm-8">@Model.Name</div>
                        </div>
                        <div class="panel-item clearfix">
                            <div class="col-sm-4 panel-item-label">Event Date</div>
                            <div class="col-sm-8">@InputHelper.ParseDate(Model.EventDate, "ddd, dd MMM yyyy")</div>
                        </div>
                        <div class="panel-item clearfix">
                            <div class="col-sm-4 panel-item-label">Notification Date</div>
                            <div class="col-sm-8">@InputHelper.ParseDate(Model.NotificationDate, "ddd, dd MMM yyyy")</div>
                        </div>
                        <div class="panel-item clearfix">
                            <div class="col-sm-4 panel-item-label">Status</div>
                            <div class="col-sm-8">@Model.GetStatus()</div>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        @using (Html.BeginForm("Destroy", "Events", new { EventId = Model.EventId })) {
                            @Html.AntiForgeryToken()
                            @Html.Bootstrap().SubmitButton().Text("Delete Event").Style(ButtonStyle.Danger).AppendIcon("glyphicon glyphicon-remove")
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Menu {
<li>@Html.Bootstrap().ActionLink("Close", "Show").AppendIcon("fa fa-window-close")</li>
}
@section BreadcrumbLight {
    @Html.Action("GetBreadcrumb", new { EventId = Model.EventId })
    <li class="active">Delete Event</li>
}

